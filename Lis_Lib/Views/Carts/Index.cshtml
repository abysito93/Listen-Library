@model Lis_Lib.Models.ShoppingCartViewModel

@{
    ViewBag.Title = "Shopping Cart";
}

<h2>Shopping Cart</h2>

<table class="table">
    @foreach (var item in Model.CartItems)
    {
        <tr>
            <td>
                <a href="@Url.Action(actionName: "ViewItem", controllerName: "Browse", routeValues: new { id = item.Audiobook.Id })"><img src="@Url.Content(item.Audiobook.Image)" alt="Cover" style="width:200px; height:200px" /></a>
            </td>
            <td>
                <p><b><a href="@Url.Action(actionName: "ViewItem", controllerName: "Browse", routeValues: new { id = item.Audiobook.Id })">@item.Audiobook.Title</a></b></p>
                <p><b>Author: </b>@Html.DisplayFor(modelItem => item.Audiobook.Author.Author1)</p>
                <p><b>Narrator: </b> @Html.DisplayFor(modelItem => item.Audiobook.Narrator.Narrator1)</p>
                <p><b>Publisher: </b>@Html.DisplayFor(modelItem => item.Audiobook.Publisher.Publisher1)</p>
                <p><b>Price: </b> @Html.DisplayFor(modelItem => item.Audiobook.Price)</p>
            </td>
            <td>
                <input type="button" class="btn btn-primary btn-lg" value="Remove from Cart" onclick="location.href='@Url.Action(actionName: "RemoveFromCart", controllerName: "Carts", routeValues: new { id = item.Audiobook.Id })'" />
            </td>
        </tr>
    }
    <tr>
        <td><b>Total:</b></td>
        <td></td>
        <td>
            @Model.CartTotal
        </td>
    </tr>
</table>

