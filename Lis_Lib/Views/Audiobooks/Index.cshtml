@model IEnumerable<Lis_Lib.Models.Audiobook>

@{
    ViewBag.Title = "Index";
}

<h2>List of Audiobooks</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm("Index", "Audiobooks", FormMethod.Get))
    {
        <p>
            Title: @Html.TextBox("SearchString")<input type="submit" value="Filter"/>
        </p>

    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Running_time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Abridged)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Release_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author.Author1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre.Genre1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Narrator.Narrator1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publisher.Publisher1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Running_time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Abridged)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Language)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Release_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author.Author1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre.Genre1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Narrator.Narrator1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Publisher.Publisher1)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
